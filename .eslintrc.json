{
  "extends": ["eslint:recommended"],
  "env": {
      "es6": true,
      "node": true
  },
  "parserOptions": {
      "ecmaVersion": 10
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "arrow-parens": ["error", "always"],
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }]
  }
}
